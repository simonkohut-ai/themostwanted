{
  "version": 2,
  "builds": [
    {
      "src": "landing-page/**",
      "use": "@vercel/static"
    },
    {
      "src": "automation/MARKETING_DASHBOARD.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/robots.txt", "dest": "/landing-page/robots.txt" },
    { "src": "/sitemap.xml", "dest": "/landing-page/sitemap.xml" },
    { "src": "/dashboard", "dest": "/automation/MARKETING_DASHBOARD.html" },
    { "src": "/", "dest": "/landing-page/index.html" },
    { "src": "/(.*)", "dest": "/landing-page/$1" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    },
    {
      "source": "/(.*).(js|css|png|jpg|jpeg|gif|ico|svg)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
